{
    "manifest_version": 3,
    "name": "M3U8 Sniffer Extension",
    "description": "A simple m3u8 sniffer",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "/popup/popup.html"
    },
    "permissions": [
        "webRequest",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}